#include <stdio.h>
#define UZERO 177

int next(const int u) {
    if (u%2 == 0) {
        return u/2;
    } else {
        return 3*u+1;
    }
}

int index_min(int uzero) {
    int u = uzero, i=0;
    while (u!=1) {
	u=next(u);
	++i;
    }
    return i;
    //printf("U(0)=%d\tkmin=%d\n",uzero,i);
}

